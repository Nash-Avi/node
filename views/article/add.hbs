{{!< main}}

<div class="container">

	<div class="col-md-4">

		<h2>Add Article</h2>

		<form id="addArticle" name="addArticle" method="POST" action="/article/add">
			<div class="form-group">
				<label for="title">Title: </label>
				<input type="text" id="title" name="title"
					class="form-control" />
			</div>
			<div class="form-group">
				<label for="content">Content:</label>
				<textarea id="content" name="content"
					rows="4" cols="40" class="form-control"></textarea>
			</div>
			<button type="submit">Save</button>
		</form>

	</div>
</div>
